<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="418dp"
        android:layout_height="471dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|center"
                android:layout_marginRight="95dp"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:scaleType="fitEnd"
                android:src="@drawable/baseline_account_balance_24" />

            <TextView
                android:id="@+id/item_account"
                android:layout_width="404dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:text="Regular Incomes/Expenses"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|center"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:scaleType="fitEnd"
                android:src="@drawable/baseline_arrow_forward_ios_24" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:scaleType="fitEnd"
                android:src="@drawable/baseline_settings_24" />

            <TextView
                android:id="@+id/item_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:text="Settings"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|center"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:scaleType="fitEnd"
                android:src="@drawable/baseline_arrow_forward_ios_24" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="54dp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:scaleType="fitEnd"
                android:src="@drawable/baseline_import_export_24" />

            <TextView
                android:id="@+id/item_export_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:text="Export Data"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|center"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:scaleType="fitEnd"
                android:src="@drawable/baseline_arrow_forward_ios_24" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:scaleType="fitEnd"
                android:src="@drawable/baseline_logout_24" />

            <TextView
                android:id="@+id/item_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp"
                android:text="Logout"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|center"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:scaleType="fitEnd"
                android:src="@drawable/baseline_arrow_forward_ios_24" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usercard"
        android:layout_margin="16dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34" >

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="184dp"
            android:layout_height="161dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/avatar2" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text=" "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usercard" />


</androidx.constraintlayout.widget.ConstraintLayout>
