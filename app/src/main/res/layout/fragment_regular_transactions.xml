<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.RegularTransactionsFragment">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/totalRegularIncomes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Regular Incomes"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="8dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/regularIncomeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_regular_income" />


        <TextView
            android:id="@+id/totalRegularExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Recurring Payments"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/regularExpenseRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_regular_expense"/>



    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>